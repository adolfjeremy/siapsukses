  href="https://wa.me/6285178272370?text=Halo%20saya%20ingin%20bertanya%20tentang%20program%20Tokutei%20Ginou"
  target="_blank"
  rel="noopener noreferrer"
  class="wa-float"
  aria-label="Konsultasi via WhatsApp"
>
  <span class="wa-tooltip"> Konsultasi Gratis </span>
  <WAImage />
</a>

<style>
  .wa-float {
    position: fixed;
    bottom: 24px;
    right: 24px;
    width: 58px;
    height: 58px;
    background-color: #25d366;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    z-index: 999;
    position: fixed;
    animation: pulse-soft 2.5s ease-out 6; /* 4 kali = Â±10 detik */
  }

  /* Hover */
  .wa-float:hover {
    transform: scale(1.08);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
  }

  .wa-tooltip {
    position: absolute;
    right: 70px;
    background: #111;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 13px;
    opacity: 0;
    transform: translateX(8px);
    transition: all 0.25s ease;
    white-space: nowrap;
    pointer-events: none;
  }

  .wa-float:hover .wa-tooltip {
    opacity: 1;
    transform: translateX(0);
  }

  @keyframes pulse-soft {
    0% {
      box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.6);
    }
    70% {
      box-shadow: 0 0 0 14px rgba(37, 211, 102, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
    }
  }
</style>
