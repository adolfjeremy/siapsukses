---
const { title, description } = Astro.props;
---

<div class="relative flex-1 flex flex-col items-center text-center">
  <!-- ICON -->
  <div
    class="relative z-10 w-16 h-16 rounded-full
           bg-indigo-50 flex items-center justify-center text-2xl"
  >
    <slot />
  </div>

  <!-- CURVE -->
  <svg
    class="absolute
        hidden md:block
         top-8
         left-[calc(50%+16px)]
         w-[100%]
         h-12"
    viewBox="0 0 200 60"
    fill="none"
    aria-hidden="true"
  >
    <path
      d="M0 24 A100 24 0 0 0 200 24"
      stroke="#2563eb"
      stroke-width="2"
      stroke-dasharray="6 6"
      stroke-linecap="round"></path>
  </svg>

  <!-- TEXT -->
  <h3 class="h4 mt-4 font-semibold text-lg text-slate-800">{title}</h3>
  <p class="mt-1 text-base text-slate-500 max-w-[200px]">
    {description}
  </p>
</div>
