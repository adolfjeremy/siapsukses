---
import { Image } from "astro:assets";
import heroImage from "../../images/tokutei_ginou.png";
import Button from "../../components/Button.astro";
import Chip from "../../components/Chip.astro";
---

<section
  class="tokutei_ginou px-[16px] md:px-[48px] lg:px-[80px] py-6 md:py-8 flex items-center justify-start"
>
  <Image
    src={heroImage}
    alt="Tokutei Ginou"
    class="absolute inset-0 w-full h-full object-cover"
    quality={60}
    format="webp"
    loading="eager"
    fetchpriority="high"
  />
  <div
    class="absolute hidden lg:block inset-0 bg-gradient-to-r
              from-white/30
              via-white/20
              to-transparent"
  >
  </div>
  <div
    class="lg:hidden absolute inset-0
            bg-gradient-to-b
            from-white/60
            via-white/30
            to-white/60"
  >
  </div>

  <div
    class="flex flex-col justify-center align-center md:items-start gap-6 md:max-w-2xl relative"
  >
    <div class="flex items-center justify-center">
      <Chip>Tokutei Ginou</Chip>
    </div>
    <h1 class="justify-start text-center md:text-left capitalize h2">
      Bisa <span class="text-[#146397]">bekerja di Jepang</span> dalam waktu singkat
      dan mendapatkan gaji sampai dengan<span class="text-[#146397]">
        25juta rupiah</span
      >
    </h1>
    <p
      class="justify-start text-[#141219] text-normal text-center md:text-justify font-normal"
    >
      Pelatihan program Tokutei Ginou adalah jawabannya
    </p>
    <div class="flex align-center justify-center">
      <Button>Gabung Sekarang</Button>
    </div>
  </div>
</section>
